<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".makeen.presentation.view.fragment.MainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/splashbg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/lin_metro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
           app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:background="@drawable/arrive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/tajawal_regular"
                    android:gravity="center"
                    android:text="محطة الوصول"
                    android:textColor="@color/black"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:background="@drawable/arrive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/tajawal_regular"
                    android:gravity="center"
                    android:text="محطة التحرك"
                    android:textColor="@color/black"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>



        </LinearLayout>

        <ImageView
            android:id="@+id/image1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/imagego"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/lin_metro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv1"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/tajawal_regular"
            android:text="حدد وسيلة المواصلات"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/image1"
            app:layout_constraintEnd_toEndOf="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/image2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/largbus"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv2"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/tajawal_regular"
            android:text="حدد عدد الركاب"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/image2"
            app:layout_constraintEnd_toEndOf="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/image3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/numberofpeole"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>





        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/lin_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/image3"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/tajawal_regular"
                    android:layout_marginEnd="15dp"
                    android:textAlignment="viewEnd"
                    android:text="تاريخ العودة"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/date_to_return"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:fontFamily="@font/tajawal_regular"
                    android:gravity="center"
                    android:text="29 April,2021"
                    android:background="@drawable/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/tajawal_regular"
                    android:layout_marginEnd="15dp"
                    android:textAlignment="viewEnd"
                    android:text="تاريخ الذهاب"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/date_to_go"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:fontFamily="@font/tajawal_regular"
                    android:gravity="center"
                    android:text="29 April,2021"
                    android:background="@drawable/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView

            android:id="@+id/image5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/searcandcombare"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/lin_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv3"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/tajawal_edium"
            android:text="أو قارن باختيارك وسيلة المواصلات"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/image5"
            app:layout_constraintEnd_toEndOf="@+id/image6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView

            android:id="@+id/image6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/imageservice"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="20dp"
            android:weightSum="1"
            android:gravity="center"
            app:cardCornerRadius="5dp"
            android:elevation="3dp"
            app:cardElevation="20dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintTop_toBottomOf="@+id/lin_metro"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:layout_marginEnd="10sp"
                android:layout_weight="0.5"
                android:layout_gravity="end|center"
                android:src="@drawable/goonly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginStart="10sp"
                android:layout_weight="0.5"
                android:layout_gravity="start|center"
                android:src="@drawable/goretunnot_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>